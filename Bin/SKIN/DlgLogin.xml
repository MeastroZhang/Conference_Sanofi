<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Window size="640,480" caption="0,0,0,200" sizebox="4,4,6,6" roundcorner="4,4" bktrans="true" showshadow="true" shadowimage="common/shadow.png" shadowsize="6" shadowcorner="8,8,8,8">
	<Font name="微软雅黑" size="14" bold="true" default="true" />
    <VerticalLayout bkimage="common/bgLogin.png">
        <HorizontalLayout name="Caption" height="30">
			<VerticalLayout />
			<Button name="btnSetting" width="30" normalimage="DlgLogin/btnSetting.png" hotimage="DlgLogin/btnSettingHot.png" />
			<Button name="btnMin" width="30" padding="20,0,0,0" normalimage="DlgLogin/btnMin.png" hotimage="DlgLogin/btnMinHot.png" />
            <Button name="btnClose" width="30" normalimage="DlgLogin/btnClose.png" hotimage="DlgLogin/btnCloseHot.png" />
        </HorizontalLayout>
		<HorizontalLayout height="40" />
        <HorizontalLayout name="Body" height="340">
            <VerticalLayout />
            <VerticalLayout width="400" bkimage="DlgLogin/bgLoginS.png">
                <HorizontalLayout height="100" />
				<HorizontalLayout name="horJoinEdit" height="90">
					<VerticalLayout width="260" padding="70,0,0,0" bkimage="DlgLogin/editInput.png">
						<HorizontalLayout height="20" padding="5,5,0,5">
							<Label name="labInviteCode" align="right" width="70" textcolor="#FF666666"/>
							<Edit name="editInviteCode" height="20" width="180" textpadding="4,3,4,3" textcolor="#FF666666" nativebkcolor="#FFFFFFFF" bkcolor="#FFFFFFFF" />
						</HorizontalLayout>
						<HorizontalLayout height="20" padding="5,5,0,5">
							<Label name="labUserEmail" align="right" width="70" textcolor="#FF666666"/>
							<Edit name="editUserEmail" height="20" width="180"  textpadding="4,3,4,3" textcolor="#FF666666" nativebkcolor="#FFFFFFFF" bkcolor="#FFFFFFFF" />
						</HorizontalLayout>
						<HorizontalLayout height="20" padding="5,5,0,5">
							<Label name="labCurUser" align="right" width="70" textcolor="#FF666666"/>
							<Edit name="editCurUser" numberonly="true" height="20" width="180"  textpadding="4,3,4,3" textcolor="#FF666666" nativebkcolor="#FFFFFFFF" bkcolor="#FFFFFFFF" />
						</HorizontalLayout>
					</VerticalLayout>
				</HorizontalLayout>
				<HorizontalLayout name="horJoinResult" visible="false" height="70">
					<VerticalLayout width="260" padding="70,0,0,0">
						<Label name="labRoomID" height="20" width="250" align="left" textpadding="54,3,4,3" textcolor="#FF666666" nativebkcolor="#FFefefef" bkcolor="#FFFFFFFF" />
						<Label name="labConferenceName" height="20" width="250" padding="0,5,0,5" align="left" textpadding="54,3,4,3" textcolor="#FF666666" nativebkcolor="#FFefefef" bkcolor="#FFFFFFFF" />
						<Label name="labTime" height="20" width="250" align="left" textpadding="54,3,4,3" textcolor="#FF666666" nativebkcolor="#FFefefef" bkcolor="#FFFFFFFF" />
					</VerticalLayout>
				</HorizontalLayout>
				<Label name="labError" visible="false" width="200" height="30" padding="70,20,0,0" textpadding="36,3,4,3" bkimage="DlgLogin/labErrorBg.png"/>
                <Button name="btnJoin" height="30" width="260" padding="70,20,0,0" textcolor="#00FFFFFF" disabledtextcolor="#FFd2d2d2" align="center" font="1" normalimage="DlgLogin/btnLogin.png" hotimage="DlgLogin/btnLoginHot.png" />
				<HorizontalLayout name="horJoinSetting" height="60">
					<VerticalLayout width="260" padding="70,0,0,0" >
						<Option name="optMic" height="16" padding="60,15,0,0" textpadding="20,0,0,0" textcolor="#FF666666" align="left" normalimage="file='DlgSetting/OptNormal.png' dest='0,0,16,16'" selectedimage="file='DlgSetting/OptSelect.png' dest='0,0,16,16'"/>
						<Option name="optVideo" height="16" padding="60,10,0,0" textpadding="20,0,0,0" textcolor="#FF666666" align="left" normalimage="file='DlgSetting/OptNormal.png' dest='0,0,16,16'" selectedimage="file='DlgSetting/OptSelect.png' dest='0,0,16,16'"/>
					</VerticalLayout>
				</HorizontalLayout>
            </VerticalLayout>
			<VerticalLayout />
        </HorizontalLayout>
    </VerticalLayout>
</Window>
