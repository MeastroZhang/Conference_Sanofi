					<VerticalLayout width="260" padding="70,0,0,0" >
						<Option name="optMic" height="16" padding="60,15,0,0" textpadding="20,0,0,0" textcolor="#FF666666" align="left" normalimage="file='\\DlgSetting\\OptNormal.png' dest='0,0,16,16'" selectedimage="file='\\DlgSetting\\OptSelect.png' dest='0,0,16,16'"/>
						<Option name="optVideo" height="16" padding="60,10,0,0" textpadding="20,0,0,0" textcolor="#FF666666" align="left" normalimage="file='\\DlgSetting\\OptNormal.png' dest='0,0,16,16'" selectedimage="file='\\DlgSetting\\OptSelect.png' dest='0,0,16,16'"/>
