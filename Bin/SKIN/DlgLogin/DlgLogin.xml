    <VerticalLayout bkimage="\\common\\bgLogin.png">
        <HorizontalLayout name="Caption" height="30">
			<VerticalLayout />
			<Button name="btnSetting" width="30" normalimage="\\DlgLogin\\btnSetting.png" hotimage="\\DlgLogin\\btnSettingHot.png" />
			<Button name="btnMin" width="30" padding="20,0,0,0" normalimage="\\DlgLogin\\btnMin.png" hotimage="\\DlgLogin\\btnMinHot.png" />
            <Button name="btnClose" width="30" normalimage="\\DlgLogin\\btnClose.png" hotimage="\\DlgLogin\\btnCloseHot.png" />
        </HorizontalLayout>
		<HorizontalLayout height="60" />
        <HorizontalLayout name="Body" height="300">
            <VerticalLayout />
            <VerticalLayout width="400" bkimage="\\DlgLogin\\bgLoginS.png">
                <HorizontalLayout height="100" />
				<HorizontalLayout name="horJoinEdit" height="60">
					<VerticalLayout width="260" padding="70,0,0,0" bkimage="\\DlgLogin\\editInput.png">
						<Edit name="editInviteCode" height="20" width="250" padding="5,5,0,5" textpadding="14,3,4,3" textcolor="#FF666666" nativebkcolor="#FFFFFFFF" bkcolor="#FFFFFFFF" />
						<Edit name="editUserEmail" height="20" width="250" padding="5,5,0,5" textpadding="14,3,4,3" textcolor="#FF666666" nativebkcolor="#FFFFFFFF" bkcolor="#FFFFFFFF" />
					</VerticalLayout>
				</HorizontalLayout>
				<HorizontalLayout name="horJoinResult" visible="false" height="70">
					<VerticalLayout width="260" padding="70,0,0,0">
						<Label name="labRoomID" height="20" width="250" align="left" textpadding="54,3,4,3" textcolor="#FF666666" nativebkcolor="#FFefefef" bkcolor="#FFFFFFFF" />
						<Label name="labConferenceName" height="20" width="250" padding="0,5,0,5" align="left" textpadding="54,3,4,3" textcolor="#FF666666" nativebkcolor="#FFefefef" bkcolor="#FFFFFFFF" />
