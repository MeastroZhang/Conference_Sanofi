<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Window size="640,480" caption="0,0,0,200" sizebox="4,4,6,6" roundcorner="4,4" bktrans="true" showshadow="true" shadowimage="\\common\\shadow.png" shadowsize="6" shadowcorner="8,8,8,8">
